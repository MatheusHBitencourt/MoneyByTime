// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.224.3/containers/javascript-node
{
	"name": "Node.js",
	"build": {
		"dockerfile": "Dockerfile",
		// Update 'VARIANT' to pick a Node version: 16, 14, 12.
		// Append -bullseye or -buster to pin to an OS version.
		// Use -bullseye variants on local arm64/Apple Silicon.
		"args": { "VARIANT": "16-bullseye" }
	},

	// Set *default* container specific settings.json values on container create.
	"settings": {},

	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"dbaeumer.vscode-eslint",
		"ue.alphabetical-sorter",
		"formulahendry.auto-close-tag",
		"formulahendry.auto-rename-tag",
		"chrisant996.autotrim",
		"ms-vscode.azure-account",
		"michelemelluso.code-beautifier",
		"coenraads.bracket-pair-colorizer-2",
		"crewsycrews.bundlephobia-support",
		"polymermallard.css-alphabetize",
		"aeschli.vscode-css-formatter",
		"pranaygp.vscode-css-peek",
		"diegomolina.css-minify",
		"ms-azuretools.vscode-docker",
		"redhat.fabric8-analytics",
		"mikestead.dotenv",
		"dracula-theme.theme-dracula",
		"mathcale.theme-dracula-refined",
		"mrmlnc.vscode-duplicate",
		"dsznajder.es7-react-js-snippets",
		"dbaeumer.vscode-eslint",
		"rifi2k.format-html-in-php",
		"dart-code.flutter",
		"ctcuff.font-preview",
		"mhutchie.git-graph",
		"github.copilot",
		"github.vscode-pull-request-github",
		"eamodio.gitlens",
		"cmacu.gotoanything",
		"ecmel.vscode-html-css",
		"sandipchitale.vscode-indent-line",
		"oderwat.indent-rainbow",
		"dbankier.vscode-instant-markdown",
		"ms-vscode.vscode-typescript-next",
		"orta.vscode-jest",
		"ms-kubernetes-tools.vscode-kubernetes-tools",
		"amirmarmul.laravel-blade-vscode",
		"shufo.vscode-blade-formatter",
		"onecentlin.laravel-blade",
		"rafa-acioly.laravel-helpers",
		"glenn2223.live-sass",
		"ritwickdey.liveserver",
		"ms-vsliveshare.vsliveshare",
		"afractal.node-essentials",
		"be5invis.vscode-icontheme-nomo-dark",
		"christian-kohler.path-intellisense",
		"rafoid.pg-utils",
		"kokororin.vscode-phpfmt",
		"esbenp.prettier-vscode",
		"prisma.prisma",
		"wallabyjs.quokka-vscode",
		"ms-vscode-remote.remote-containers",
		"ms-vscode-remote.remote-ssh",
		"ms-vscode-remote.remote-ssh-edit",
		"plibither8.remove-comments",
		"syler.sass-indented",
		"rbbit.typescript-hero",
		"pmneo.tsimporter",
		"visualstudioexptteam.vscodeintellicode",
		"emmanuelbeziat.vscode-great-icons",
		"redhat.vscode-yaml"
	],
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "yarn install",

	// Comment out to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "node",
	"features": {
		"git": "os-provided",
		"github-cli": "latest",
		"sshd": "latest"
	}
}
